@{
}

<div style="padding-top:5.5%; margin: auto; width: 30%;">
    <div class="col-lg-6 mb-4 mb-lg-0" style="width:50%; margin: auto; padding-bottom:5%;">
        <img src="https://freesvg.org/img/abstract-user-flat-4.png" style="object-fit: cover; width:100%; aspect-ratio: 1; border-radius: 50%;">
    </div>
    <div style="padding-bottom:8%; text-align: center;">
        <h2>Welcome, New User</h2>
    </div>
    <form method="post" asp-action="CreateAPI">
        <div class="form-group">
            <label asp-for="Email">Email address</label>
            <input asp-for="Email" class="form-control" placeholder="Enter email">
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
        <div class="form-group" style="padding-bottom:3%">
            <label asp-for="Password">Password</label>
            <input asp-for="Password" type="password" class="form-control" placeholder="Password">
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>
        <hr />
        <div class="form-group">
            <label asp-for="Data.Name">Username</label>
            <input asp-for="Data.Name" class="form-control" placeholder="Username">
            <span asp-validation-for="Data.Name" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Data.Phone">Phonenumber</label>
            <input asp-for="Data.Phone" class="form-control" placeholder="Phonenumber">
            <span asp-validation-for="Data.Phone" class="text-danger"></span>
        </div>
        <div class="form-group" style="padding-bottom:3%">
            <label asp-for="Data.Picture">Profile Picture</label>
            <input asp-for="Data.Picture" class="form-control" placeholder="Link">
            <span asp-validation-for="Data.Picture" class="text-danger"></span>
        </div>
        <hr />
        <div class="form-group">
            <label asp-for="Data.Bio">Tell us more about yourself</label>
            <textarea asp-for="Data.Bio" class="form-control" rows="6" cols="60"></textarea>
            <span asp-validation-for="Data.Bio" class="text-danger"></span>
        </div>
        <div style="padding-top:5%">
            <button type="submit" class="btn btn-primary">Submit</button>
        </div>
    </form>
</div>