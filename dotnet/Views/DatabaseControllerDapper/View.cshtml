@{
}
<link href="./Carousel Template for Bootstrap_files/bootstrap.min.css" rel="stylesheet">

<div style="padding-top:5.5%">
    <div class="row">
        <div class="col-lg-12 mb-4 mb-sm-5">
            <div class="card card-style1 border-0">
                <div class="card-body p-1-9 p-sm-2-3 p-md-6 p-lg-7">
                    <div class="row" style="margin: auto; width: 60%">
                        <div class="col-lg-6 mb-4 mb-lg-0" style="width:30%">
                            <img src="@Html.DisplayFor(model => model.Data.Picture)" onerror="this.src='https://freesvg.org/img/abstract-user-flat-4.png'" style="object-fit: cover; width:100%; aspect-ratio: 1; border-radius: 50%;">
                        </div>
                        <div class="col-lg-6 px-xl-10" style="vertical-align: top; width:70%">
                            <div class="bg-secondary d-lg-inline-block rounded" style="width:100%">
                                <h2 class="h2 text-white mb-0" style="padding-left: 5%">@Html.DisplayFor(model => model.Data.Name)</h2>
                                <span class="badge badge-primary" style="padding-left: 5%; display: inline-block;">User#@Html.DisplayFor(model => model.Id)</span>
                            </div>
                            <ul class="list-unstyled mb-1-9" style="padding-left:5%; padding-top:5%">
                                <li class="mb-2 mb-xl-3 display-28"><span class="display-26 text-secondary me-2 font-weight-600">Email:</span> @Html.DisplayFor(model => model.Email)</li>
                                <li class="mb-2 mb-xl-3 display-28"><span class="display-26 text-secondary me-2 font-weight-600">Phone:</span> @Html.DisplayFor(model => model.Data.Phone)</li>
                            </ul>
                        </div>
                        <div style="margin: auto; width: 100%; padding-top:5%">
                            <h3>About Me</h3>
                            <p>@Html.DisplayFor(model => model.Data.Bio)</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>